@{
    ViewData["Title"] = "Choisir une spécialité à modifier";
    var specialites = (List<SelectListItem>)ViewBag.LesSpecialites;
    int idPraticien = (int)ViewBag.IdPraticien;
}

<h2>Choisir la spécialité à modifier</h2>

<form asp-action="SelectionnerSpecialitePourModification" method="post">
    <input type="hidden" name="idPraticien" value="@idPraticien" />

    <div class="form-group">
        <label for="idSpecialite">Spécialité :</label>
        <select name="idSpecialite" class="form-control" required>
            @foreach (var item in specialites)
            {
                <option value="@item.Value">@item.Text</option>
            }
        </select>
    </div>

    <button type="submit" class="btn btn-warning">Modifier</button>
</form>
